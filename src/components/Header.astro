---
import { Image } from 'astro:assets';
import logoSrc from '../assets/logo.svg';

const navItems = [
  { name: 'Inicio', href: '#hero' },
  { name: 'Servicios', href: '#features' },
  { name: 'Integraciones', href: '#integrations' },
  { name: 'Cómo funciona', href: '#how-it-works' },
  { name: 'Contacto', href: '#contact' },
];
---

<header class="sticky top-0 z-50 w-full bg-white/90 backdrop-blur-lg border-b border-gray-100 shadow-sm" role="banner">
  <div class="container-custom flex items-center justify-between h-20">
    <a href="#hero" class="flex items-center transition-transform duration-300 hover:scale-105 focus:scale-105 focus:outline-none focus:ring-2 focus:ring-donaya-turquoise focus:ring-offset-2 rounded" aria-label="Donaya home">
      <Image src={logoSrc} alt="Donaya Logo" width={150} height={52} class="transition-all duration-300 hover:brightness-110 focus:brightness-110" />
    </a>
    
    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center space-x-8" role="navigation" aria-label="Main navigation">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class="text-gray-700 hover:text-donaya-turquoise focus:text-donaya-turquoise transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-donaya-turquoise focus:ring-offset-2 rounded px-3 py-2 relative group"
        >
          {item.name}
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-donaya-turquoise to-donaya-orange transition-all duration-300 group-hover:w-full"></span>
        </a>
      ))}
    </nav>
    
    <div class="flex items-center space-x-4">
      <a href="#contact" class="btn btn-primary focus:outline-none focus:ring-2 focus:ring-donaya-turquoise focus:ring-offset-2 shadow-lg hover:shadow-xl transition-all duration-300">
        Transforma tu organización
      </a>
      
      <!-- Mobile Menu Button -->
      <button 
        id="menu-toggle" 
        class="md:hidden flex items-center transition-transform duration-300 focus:outline-none focus:ring-2 focus:ring-donaya-turquoise focus:ring-offset-2 rounded p-2 hover:bg-gray-100" 
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <nav id="mobile-menu" class="hidden md:hidden bg-white/95 backdrop-blur-lg w-full border-t border-gray-100 shadow-lg" role="navigation" aria-label="Mobile navigation">
    <div class="container-custom py-6 space-y-2">
      {navItems.map((item, index) => (
        <a 
          href={item.href} 
          class="block py-3 px-4 text-gray-700 hover:text-donaya-turquoise hover:bg-gray-50 focus:text-donaya-turquoise transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-donaya-turquoise focus:ring-offset-2 rounded-lg font-medium"
          style={`transition-delay: ${index * 50}ms;`}
        >
          {item.name}
        </a>
      ))}
      <div class="pt-4 border-t border-gray-100">
        <a href="#contact" class="block py-3 px-4 bg-gradient-to-r from-donaya-turquoise to-donaya-orange text-white rounded-lg font-medium text-center hover:shadow-lg transition-all duration-300">
          Transforma tu organización
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('astro:page-load', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', () => {
        const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
        
        menuToggle.setAttribute('aria-expanded', !isExpanded);
        mobileMenu.classList.toggle('hidden');
        
        // Animate menu icon
        if (!isExpanded) {
          menuToggle.classList.add('rotate-90');
        } else {
          menuToggle.classList.remove('rotate-90');
        }
      });
    }
  });
</script>
