---
import { Image } from 'astro:assets';
---

<section class="py-20 bg-white relative overflow-hidden">
  <!-- Subtle background pattern with parallax effect -->
  <div class="absolute inset-0 opacity-5 parallax" data-speed="0.15">
    <div class="absolute inset-0 bg-repeat" style="background-image: url('/grid-pattern.svg');"></div>
  </div>
  
  <div class="container-custom relative">
    <div class="text-center max-w-3xl mx-auto animate-on-scroll">
      <h2 class="text-3xl md:text-4xl font-bold">
        Integraciones y portal de administración
      </h2>
      <p class="mt-4 text-xl text-gray-600">
        Conectamos con las herramientas que ya usas y te damos control total sobre tus aportes recurrentes
      </p>
    </div>
    
    <div class="mt-16 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Column - Integrations -->
      <div class="space-y-8">
        <div class="bg-gradient-to-br from-gray-50 to-white rounded-xl p-8 shadow-lg border border-gray-100">
          <h3 class="text-2xl font-bold text-gray-800 mb-6">Integraciones con CRMs</h3>
          <div class="grid grid-cols-2 gap-6 mb-6">
            <!-- Monday.com -->
            <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100">
              <div class="flex items-center space-x-3">
                <img src="/logos/plataformas/logo_monday.svg" alt="Monday.com" class="w-10 h-10">
                <div>
                  <h4 class="font-semibold text-gray-800">Monday.com</h4>
                  <p class="text-sm text-gray-600">Sincronización automática</p>
                </div>
              </div>
            </div>
            
            <!-- Google Analytics -->
            <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100">
              <div class="flex items-center space-x-3">
                <img src="/logos/plataformas/logo_analytics.png" alt="Google Analytics" class="w-10 h-10">
                <div>
                  <h4 class="font-semibold text-gray-800">Google Analytics</h4>
                  <p class="text-sm text-gray-600">Tracking de conversiones</p>
                </div>
              </div>
            </div>
            
            <!-- HubSpot -->
            <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100">
              <div class="flex items-center space-x-3">
                <img src="/logos/plataformas/logo_hubspot.webp" alt="HubSpot" class="w-10 h-10">
                <div>
                  <h4 class="font-semibold text-gray-800">HubSpot</h4>
                  <p class="text-sm text-gray-600">Gestión de leads</p>
                </div>
              </div>
            </div>
            
            <!-- Salesforce -->
            <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100">
              <div class="flex items-center space-x-3">
                <img src="/logos/plataformas/logo_salesforce.png" alt="Salesforce" class="w-10 h-10">
                <div>
                  <h4 class="font-semibold text-gray-800">Salesforce</h4>
                  <p class="text-sm text-gray-600">CRM empresarial</p>
                </div>
              </div>
            </div>
          </div>
          
          <a href="#contact" class="block bg-gradient-to-r from-donaya-turquoise to-donaya-orange text-white px-6 py-3 rounded-lg font-medium text-sm shadow-md hover:shadow-lg transition-all duration-300 text-center">
            Configurar integraciones
          </a>
        </div>
        
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-8 shadow-lg border border-blue-100">
          <h3 class="text-2xl font-bold text-gray-800 mb-4">Analytics y Reportes</h3>
          <p class="text-gray-600 mb-6">
            Obtén insights detallados sobre el comportamiento de tus donadores y optimiza tus campañas
          </p>
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-donaya-turquoise rounded-full"></div>
              <span class="text-gray-700">Tracking de conversiones en tiempo real</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-donaya-orange rounded-full"></div>
              <span class="text-gray-700">Reportes personalizados automáticos</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-donaya-turquoise rounded-full"></div>
              <span class="text-gray-700">Integración con Google Analytics 4</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Admin Portal -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl shadow-2xl overflow-hidden">
        <div class="p-6 bg-gray-700 border-b border-gray-600">
          <div class="flex items-center justify-between">
            <h3 class="text-xl font-bold text-white">Portal de Administración</h3>
            <div class="flex space-x-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
          </div>
        </div>
        
        <div class="p-6">
          <!-- Navigation Tabs -->
          <div class="flex space-x-1 mb-6 bg-gray-700 rounded-lg p-1">
            <button class="flex-1 py-2 px-4 bg-donaya-turquoise text-white rounded-md text-sm font-medium transition-all duration-300" onclick="showTab('recurrent')">
              Aportes Recurrentes
            </button>
            <button class="flex-1 py-2 px-4 text-gray-300 rounded-md text-sm font-medium hover:text-white transition-all duration-300" onclick="showTab('analytics')">
              Analytics
            </button>
            <button class="flex-1 py-2 px-4 text-gray-300 rounded-md text-sm font-medium hover:text-white transition-all duration-300" onclick="showTab('settings')">
              Configuración
            </button>
          </div>
          
          <!-- Tab Content -->
          <div id="recurrent-tab" class="tab-content">
            <div class="space-y-4">
              <!-- Stats Cards -->
              <div class="grid grid-cols-3 gap-4 mb-6">
                <div class="bg-gray-700 rounded-lg p-4">
                  <div class="text-2xl font-bold text-white">1,247</div>
                  <div class="text-sm text-gray-400">Donadores Activos</div>
                </div>
                <div class="bg-gray-700 rounded-lg p-4">
                  <div class="text-2xl font-bold text-donaya-turquoise">$45,230</div>
                  <div class="text-sm text-gray-400">Este Mes</div>
                </div>
                <div class="bg-gray-700 rounded-lg p-4">
                  <div class="text-2xl font-bold text-donaya-orange">94.2%</div>
                  <div class="text-sm text-gray-400">Tasa de Retención</div>
                </div>
              </div>
              
              <!-- Recent Transactions -->
              <div class="bg-gray-700 rounded-lg p-4">
                <h4 class="text-white font-semibold mb-4">Transacciones Recientes</h4>
                <div class="space-y-3">
                  <div class="flex items-center justify-between py-2 border-b border-gray-600">
                    <div class="flex items-center space-x-3">
                      <div class="w-8 h-8 bg-donaya-turquoise rounded-full flex items-center justify-center">
                        <span class="text-white text-xs font-bold">MG</span>
                      </div>
                      <div>
                        <div class="text-white text-sm">María González</div>
                        <div class="text-gray-400 text-xs">Hace 2 horas</div>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-white text-sm font-semibold">$50.00</div>
                      <div class="text-green-400 text-xs">✓ Completado</div>
                    </div>
                  </div>
                  
                  <div class="flex items-center justify-between py-2 border-b border-gray-600">
                    <div class="flex items-center space-x-3">
                      <div class="w-8 h-8 bg-donaya-orange rounded-full flex items-center justify-center">
                        <span class="text-white text-xs font-bold">JP</span>
                      </div>
                      <div>
                        <div class="text-white text-sm">Juan Pérez</div>
                        <div class="text-gray-400 text-xs">Hace 4 horas</div>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-white text-sm font-semibold">$25.00</div>
                      <div class="text-green-400 text-xs">✓ Completado</div>
                    </div>
                  </div>
                  
                  <div class="flex items-center justify-between py-2">
                    <div class="flex items-center space-x-3">
                      <div class="w-8 h-8 bg-gray-600 rounded-full flex items-center justify-center">
                        <span class="text-white text-xs font-bold">AL</span>
                      </div>
                      <div>
                        <div class="text-white text-sm">Ana López</div>
                        <div class="text-gray-400 text-xs">Hace 6 horas</div>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-white text-sm font-semibold">$100.00</div>
                      <div class="text-yellow-400 text-xs">⏳ Pendiente</div>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex space-x-3">
                <button class="flex-1 bg-donaya-turquoise text-white py-2 px-4 rounded-lg text-sm font-medium hover:bg-donaya-turquoise/90 transition-all duration-300">
                  Exportar Reporte
                </button>
                <button class="flex-1 bg-gray-600 text-white py-2 px-4 rounded-lg text-sm font-medium hover:bg-gray-500 transition-all duration-300">
                  Ver Todos
                </button>
              </div>
            </div>
          </div>
          
          <div id="analytics-tab" class="tab-content hidden">
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <h4 class="text-white font-semibold mb-2">Analytics Avanzados</h4>
              <p class="text-gray-400 text-sm">Gráficos y métricas detalladas</p>
            </div>
          </div>
          
          <div id="settings-tab" class="tab-content hidden">
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h4 class="text-white font-semibold mb-2">Configuración</h4>
              <p class="text-gray-400 text-sm">Ajustes y preferencias</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function showTab(tabName) {
    // Hide all tab contents
    const tabContents = document.querySelectorAll('.tab-content');
    tabContents.forEach(content => {
      content.classList.add('hidden');
    });
    
    // Remove active class from all buttons
    const buttons = document.querySelectorAll('[onclick^="showTab"]');
    buttons.forEach(button => {
      button.classList.remove('bg-donaya-turquoise', 'text-white');
      button.classList.add('text-gray-300');
    });
    
    // Show selected tab content
    const selectedTab = document.getElementById(tabName + '-tab');
    if (selectedTab) {
      selectedTab.classList.remove('hidden');
    }
    
    // Add active class to clicked button
    const clickedButton = event.target;
    clickedButton.classList.remove('text-gray-300');
    clickedButton.classList.add('bg-donaya-turquoise', 'text-white');
  }
</script>
