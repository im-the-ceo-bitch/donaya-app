---
interface Props {
  type?: 'text' | 'email' | 'number' | 'password';
  placeholder?: string;
  value?: string;
  class?: string;
  disabled?: boolean;
  required?: boolean;
}

const { 
  type = 'text',
  placeholder = '',
  value = '',
  class: className = '',
  disabled = false,
  required = false
} = Astro.props;

const baseClasses = 'w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-donaya-turquoise focus:border-donaya-turquoise transition-colors duration-200';
const classes = `${baseClasses} ${disabled ? 'opacity-50 cursor-not-allowed' : ''} ${className}`;
---

<input 
  type={type}
  placeholder={placeholder}
  value={value}
  class={classes}
  disabled={disabled}
  required={required}
/>

