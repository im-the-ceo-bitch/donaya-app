---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  disabled?: boolean;
}

const { 
  variant = 'primary', 
  size = 'md', 
  class: className = '',
  disabled = false 
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2';
const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-2.5 text-sm',
  lg: 'px-6 py-3 text-base'
};
const variantClasses = {
  primary: 'bg-donaya-orange text-white hover:bg-donaya-orange-dark focus:ring-donaya-orange',
  secondary: 'bg-donaya-turquoise text-white hover:bg-opacity-90 focus:ring-donaya-turquoise',
  outline: 'border-2 border-donaya-orange text-donaya-orange hover:bg-donaya-orange hover:text-white focus:ring-donaya-orange'
};

const classes = `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]} ${disabled ? 'opacity-50 cursor-not-allowed' : ''} ${className}`;
---

<button class={classes} disabled={disabled}>
  <slot />
</button>

